<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <properties>
    <mvn.marketcetera.version>1.6.0</mvn.marketcetera.version>
<!-- attempt later
    <org.openstrategies.github.url>1.6.0</org.openstrategies.github.url>
 -->
  </properties>

  <parent>
    <groupId>org.marketcetera</groupId>
    <artifactId>declarations</artifactId>
    <version>[${mvn.marketcetera.version}]</version>
  </parent>

  <groupId>org.openstrategies</groupId>
  <artifactId>openstrategies-org</artifactId>
  <packaging>jar</packaging>

  <version>1.0-SNAPSHOT</version>

  <name>openstrategies-org</name>
  <url>http://github.com/sfrancolla/openstrategies-org</url>
  <description>Open collaboration of trading strategies executable on the Marketcetera platform.</description>
  <licenses>
    <license>
      <name>GNU LESSER GENERAL PUBLIC LICENSE 3.0</name>
      <url>http://www.gnu.org/licenses/lgpl-3.0.txt</url>
      <distribution>repo</distribution>
      <comments>A business-friendly OSS license</comments>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>sfrancolla</id>
      <name>Steven Francolla</name>
      <email>sfrancolla@gmail.com</email>
      <organization>OpenStrategies</organization>
      <organizationUrl>http://openstrategi.es/</organizationUrl>
      <roles>
        <role>founder</role>
        <role>architect</role>
        <role>developer</role>
      </roles>
      <timezone>-5</timezone>
    </developer>
  </developers>

  <scm>
    <connection>scm:git:git@github.com:sfrancolla/openstrategies-org.git</connection>
    <url>scm:git:git@github.com:sfrancolla/openstrategies-org.git</url>
    <developerConnection>scm:git:git@github.com:sfrancolla/openstrategies-org.git</developerConnection>  
  </scm>
  
  <build>  
    <plugins>  
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.0</version>
      </plugin>
    </plugins>  
  </build>
